<options>
    <qmmm help="Executes qmmm calculations for individual molecules and clusters" section="sec:qmmm">
        <print_regions_pdb>true</print_regions_pdb>
        <max_iterations>50</max_iterations>
        <regions>
            <mapfile>map.xml</mapfile>
            <region>
                <id>0</id>
                <type>gwbse</type>
                <options_dft />
                <options_gwbse />
                <filter />
                <segments>0:n 1:n 2:n 3</segments>
            </region>
            <region>
                <id>1</id>
                <type>dft</type>
                <options_dft />
                <segments>jobfile</segments>
            </region>
            <region>
                <id>2</id>
                <type>polar</type>
                <options>polar.xml</options>
                <segments></segments>
                <cutoff>
                    <state>n</state>
                    <radius>3</radius>
                    <region>0</region>
                </cutoff>
            </region>
            <region>
                <id>3</id>
                <type>static</type>
                <cutoff>5</cutoff>
            </region>
        </regions>
    </qmmm>

</options>